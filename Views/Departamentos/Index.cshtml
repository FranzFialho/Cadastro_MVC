@model IEnumerable<Cadastro_MVC.Departamento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="wrapper">
    <div class="row">
        <div class="content-panel" style="padding:20px">
            <p>
                @Html.ActionLink("NOVO", "Create", null, new { @class = "btn btn-success create glyphicon glyphicon-open" })
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                   
                        <td>
                            @Html.ActionLink("Editar ", "Edit", new { id = item.Id }, new { @class = "btn btn-primary glyphicon glyphicon-edit" })
                            @Html.ActionLink("Detalhes ", "Details", new { id = item.Id }, new { @class = " btn btn-success glyphicon glyphicon-file" })
                            @Html.ActionLink("Deletar ", "Delete", new { id = item.Id }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</section>